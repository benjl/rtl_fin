<ezstream>
    <servers>
        <server>
            <name>{SERVERNAME}</name>
            <protocol>HTTP</protocol>
            <hostname>127.0.0.1</hostname>
            <port>{PORT}</port>
            <user>source</user>
            <password>{SRC_PASSWORD}</password>
            <reconnect_attempts>0</reconnect_attempts>
            <tls>None</tls>
        </server>
    </servers>
    <streams>
        <stream>
            <name>default</name>
            <mountpoint>{MOUNTPOINT}</mountpoint>
            <public>0</public>
            <intake>rtl_intake</intake>
            <server>{SERVERNAME}</server>
            <format>mp3</format>
            <stream_name>{STREAMNAME}</stream_name>
            <stream_genre>{GENRE}</stream_genre>
            <stream_description>{DESCRIPTION}</stream_description>
        </stream>
    </streams>
    <intakes>
        <intake>
            <name>rtl_intake</name>
            <type>stdin</type>
            <stream_once>1</stream_once>
        </intake>
    </intakes>
    <metadata></metadata>
</ezstream>